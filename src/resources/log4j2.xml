<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss} [%t] %-5p %c - %m%n</Property>
    </Properties>
    <Appenders>
        <Console name="STDOUT" target="SYSTEM_OUT">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
        <RollingFile name="com-seda-cart-ws-soap"
                	  fileName="../standalone/log/com-seda-cart-ws-soap.log"
                	  filePattern="%d{yyyy-MM-dd}-com-seda-cart-ws-soap.%i.log.gz"
                	  ignoreExceptions="false" filePermissions="rw-rw-r--">
			<JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="500MB" />
            </Policies>
            <ThresholdFilter level="INFO"/>
        </RollingFile>
        <RollingFile name="com-seda-cart-ws"
                	  fileName="../standalone/log/com-seda-cart-ws.log"
                	  filePattern="mgp.%i.log.gz"
                	  ignoreExceptions="false" filePermissions="rw-rw-r--">
            <PatternLayout pattern="${LOG_PATTERN}"/>
			<!-- <JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/> -->
            <Policies>
                <SizeBasedTriggeringPolicy size="500MB" />
            </Policies>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
        <RollingFile name="com-seda-cart-ws-error"
                	 fileName="../standalone/log/com-seda-cart-ws-error.log"
                	 filePattern="com-seda-cart-ws-error.%i.log"
                     ignoreExceptions="false" filePermissions="rw-rw-r--">
			<JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="200MB" />
            </Policies>
            <ThresholdFilter level="ERROR"/>
        </RollingFile>
        <RollingFile name="com-seda-cart-ws-debug"
                	 fileName="../standalone/log/com-seda-cart-ws-debug.log"
                	 filePattern="com-seda-cart-ws-error.%i.log"
                     ignoreExceptions="false" filePermissions="rw-rw-r--">
			<JsonTemplateLayout eventTemplateUri="classpath:ElasticsearchJsonEventLayoutV1.json"/>
            <Policies>
                <SizeBasedTriggeringPolicy size="500MB" />
            </Policies>
            <ThresholdFilter level="DEBUG"/>
            <DefaultRolloverStrategy max="10" />
        </RollingFile>
    </Appenders>
    <Loggers>
		<Logger name="com.seda.cart" level="INFO" additivity="false">
			<AppenderRef ref="com-seda-cart-ws" />
            <AppenderRef ref="com-seda-cart-ws-error" />
		</Logger>         
		<Logger name="com.seda.cart.webservices.listener" level="DEBUG" additivity="false">
			<AppenderRef ref="com-seda-cart-ws-debug" />
		</Logger>         
		<Logger name="org.apache.cxf.services" level="INFO" additivity="false">
			<AppenderRef ref="com-seda-cart-ws-soap" />
		</Logger>         
		<Logger name="com.seda.payer.core.dao" level="INFO" additivity="false">
			<AppenderRef ref="com-seda-cart-ws-dao" />
		</Logger>         
        <Root level="INFO" >
            <AppenderRef ref="STDOUT" />
        </Root>
    </Loggers>
</Configuration>
